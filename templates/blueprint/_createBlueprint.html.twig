{{ form_start(form) }}
    <section class="mb-3">
        <h3>Select basic info</h3>
        <div class="row">
            <div class="col">{{ form_row(form.manufacturer) }}</div>
            <div class="col">{{ form_row(form.role) }}</div>
        </div>
        <div class="row" {{ stimulus_controller('select-classification') }}>
            <div class="col">{{ form_row(form.class) }}</div>
            <div class="col">{{ form_row(form.variant) }}</div>
        </div>
        <div class="row">
            <div class="col">{{ form_row(form.model) }}</div>
        </div>
    </section>
    <button type="submit" class="btn btn-primary">Create a blueprint</button>
{{ form_end(form, {render_rest: false}) }}