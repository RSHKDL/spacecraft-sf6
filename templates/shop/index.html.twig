{% extends 'base.html.twig' %}

{% block title %}Our Shop : All manufacturer{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <ul>
                {% for manufacturer in manufacturers %}
                    <li>
                        <a href="{{ path('app_shop_show', {id: manufacturer.id}) }}">{{ manufacturer.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}