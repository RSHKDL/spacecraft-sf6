{% extends 'base.html.twig' %}

{% block title %}Spaceship: All components{% endblock %}

{% block body %}
    <div class="container mt-3">
        <header class="row">
            <h2>All {{ totalComponents }} Spaceship Components</h2>
        </header>
        <section class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Type</th>
                        <th scope="col">Subtype</th>
                        <th scope="col">Name</th>
                        <th scope="col">Manufacturer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for option in options %}
                        {{ include('spaceshipOptions/_row.html.twig') }}
                    {% endfor %}
                </tbody>
            </table>
            {{ include(
                'spaceshipOptions/_pagination.html.twig',
                {'total': totalPage, 'current': currentPage},
                with_context = false
            ) }}
        </section>
    </div>
{% endblock %}
